<div>
    <h1>
        <%= @topic.title %> <br>
    </h1>
</div>

<div class="row">
    <div class="col-md-8">
        <% @topic.bookmarks.each do |bookmark| %>
            <ul>
                <li><%= link_to bookmark.url, bookmark.url %></li>
            </ul>
        <% end %>
    </div>
    <div class="col-md-8">
        <%= link_to "Add Bookmark", topic_bookmark_path(@topic.id), class: 'btn btn-success' %>
        <%= link_to "Remove Bookmarks", topic_bookmark_remove_path(@topic.id), class: 'btn btn-success' %>
        <%= link_to "Delete Topic", [@topic], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
    </div>
</div>