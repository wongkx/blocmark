<div>
    <h1>
        <%= @topic.title %> <br>
    </h1>
</div>

<div class="row">
    <div class="col-md-8">
        <% @topic.bookmarks.each do |bookmark| %>
            <div>
                <%= link_to bookmark.url, bookmark.url %>
                <%= link_to "Edit", edit_topic_bookmark_path(@topic, bookmark), 'data-target' => "#modal-window", 'data-toggle' =>  'modal' %>
                <div class="modal fade" id="modal-window" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">Ã—</button>
                                <h3 class="modal-title">Modal header</h3>
                            </div>
                            <div class="modal-body">
                                <%= render 'bookmarks/update', bookmark: bookmark %>
                            </div>
                            <div class="modal-footer">
                                <button class="btn" data-dismiss="modal">Close</button>
                                <button class="btn btn-primary">Save changes</button>
                            </div>
                        </div>
                    </div>
                </div>
                <%= link_to "Remove Bookmark", [@topic, @bookmark], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this bookmark?'} %>
            </div>
            
                
            </div>
        </div>
        <% end %>
        
    </div>
    <div class="col-md-8">
        <%= link_to "Add Bookmark", new_topic_bookmark_path(@topic.id), class: 'btn btn-success' %>
        
        <%= link_to "Delete Topic", [@topic], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
    </div>
</div>