<div>
    <h1>
        <%= @topic.title %> <br>
    </h1>
</div>

<div class="row">
    <div class="col-md-8">
        <% @bookmarks.each do |bookmark| %>
            bookmark.href
        <% end %>
    </div>
    <div class="col-md-8">
        <%= link_to "Edit", topics_edit_path(@topic), class: 'btn btn-success' %>
        <%= link_to "Delete Topic", [@topic], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this topic?'} %>
    </div>
</div>